<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>

			<% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

  <%= form_with model: @book, method: :patch do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label><br>
      <%= f.text_field :title, autofocus: true, id:"inpuTitle", placeholder:"title", class: 'form-control name' %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opinion</label><br>
      <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:"body", class: 'form-control name' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Update Book', class: 'btn btn-success text-white' %>
    </div>
  <% end %>
	
  		<%= link_to 'Show', @book %> |
  		<%= link_to 'Back', books_path, class: "back" %>
  </div>
</div>