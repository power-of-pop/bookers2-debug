
  <% book.book_comments.each do |book_comment| %>
    <tr>
      <td>
        <p><%= image_tag book_comment.user.get_profile_image, size:"50x50" %></p>
        <%= link_to book_comment.user.name, user_path(book.user) %>
      </td>
      <td><%= book_comment.comment %></td>
      <% if book_comment.user == current_user %>
        <td><%= link_to "destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" ,method: :delete , remote:true, data: {"turbolinks" => false} %></td>
      <% end %>
    </tr>
  <% end %>
