<div>
  <% book.book_comments.each do |book_comment| %>
      <td>
        <p><%= image_tag book_comment.user.get_profile_image, size:"50x50" %></p>
        <%= link_to book_comment.user.name, user_path(book.user) %>
      </td>
      <td>
        <%= book_comment.comment %>
        <% if book_comment.user == current_user %>
          <%= link_to "destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" ,method: :delete , remote:true, data: {"turbolinks" => false} %>
          <%#= link_to 'Destroy', book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
        <% end %>
      </td>
  <% end %>
</div>